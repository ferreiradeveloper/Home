@page "/Usuario/Register"
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container p-a">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Registrar</h3>
                </div>
                <img src="~/images/icons/logoyenny.png" class="mx-auto w-25 mt-2">
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input asp-for="Input.Password" class="form-control" placeholder="Contraseña" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input asp-for="Input.ConfirmarPassword" class="form-control" placeholder="Confirmar Contraseña" />
                            <span asp-validation-for="Input.ConfirmarPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn-block btn-primary">Registrar</button>
                        </div>
                    </form>
                    <label id="Message" class="text-danger"> @Html.DisplayFor(m => m.Input.ErrorMessage) </label>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name ="_ValidationScriptsPartial" />
}
